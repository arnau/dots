[user]
  name = Arnau Siches
  email = asiches@gmail.com

[alias]
  ci = commit -S
  st = status -sb
  co = checkout
  b = branch
  ls = ls-files
  type = cat-file -t
  dump = cat-file -p
  viff = difftool -y -t vimdiff
  gl = log --graph --date=short \
    --pretty=format:\"%C(red)%h%Creset %C(green)%ad%Creset %s%C(yellow) %D%Creset %C(bold blue)%G? %aN <%ae>%Creset\"
  dlog = log --oneline --decorate
  loglive = !~/.dots/git/bin/git-loglive
  treelive = !~/.dots/git/bin/git-treelive
  pull = pull --rebase=preserve
  rebase = rebase -S
  merge = merge -S
  active = rev-parse --abbrev-ref HEAD
  absorb = !git-absorb

[merge]
  tool = vimdiff
  keepBackup = false

[mergetool "vimdiff"]
  cmd = vimdiff \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
  trustExitCode = true

[color]
  ui = true

[core]
  excludesfile = ~/.dots/git/gitignore
  editor = vim
  safecrlf = true
  autocrlf = input
  eol = lf

[push]
  default = tracking

[commit]
  template = ~/.dots/git/templates/commit

