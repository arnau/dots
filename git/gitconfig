[user]
  name = Arnau Siches
  email = asiches@gmail.com
  signingkey = 3316F53B

[alias]
  active = rev-parse --abbrev-ref HEAD
  b = branch
  ci = commit -s
  co = checkout
  dlog = log --oneline --decorate
  dump = cat-file -p
  fiff = diff --name-status
  flog = log --name-status --oneline
  fuzzlog = !git log --oneline --shortstat --quiet | fzf -e
  gl = log --graph --date=short \
    --pretty=format:\"%C(red)%h%Creset %C(green)%ad%Creset %s%C(yellow) %D%Creset %C(bold blue)%G? %aN <%ae>%Creset\"
  loglive = !~/.dots/git/bin/git-loglive
  ls = ls-files
  lst = diff-tree --no-commit-id --name-only -r
  merge = merge -s
  pull = pull --rebase=preserve
  rebase = rebase -s
  st = status -sb
  treelive = !~/.dots/git/bin/git-treelive
  type = cat-file -t
  viff = difftool -y -t vimdiff

[merge]
  tool = vimdiff
  keepBackup = false

[mergetool "vimdiff"]
  cmd = vimdiff \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
  trustExitCode = true

[color]
  ui = true

[core]
  excludesfile = ~/.dots/git/gitignore
  editor = vim
  safecrlf = true
  autocrlf = input
  eol = lf

[push]
  default = tracking

[commit]
  gpgsign = true

[gpg]
  program = /usr/local/bin/gpg
