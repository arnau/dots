#!/usr/bin/env bash

set -o vi

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export GEMEDITOR='vim'
export EDITOR='vim'

# alias electron='/Applications/Electron.app/Contents/MacOS/Electron'
alias irb='irb --readline -r irb/completion -r rubygems'
alias ls='ls -hFG'
alias scannet='arp -i en0 -a'
alias serve='devd .'
# alias serve='python -m SimpleHTTPServer'
alias ssh='TERM=xterm ssh'
alias vagrant='TERM=xterm vagrant'
alias vault='vim /Volumes/vault/asiches/management/data/info.ttl'
alias gpg='gpg2'


###############################################################################
# Paths
###############################################################################
JAVA_HOME=$(/usr/libexec/java_home)
export JAVA_HOME


export RUST_PATH="$HOME/.cargo/bin"
export RUST_SRC_PATH="$HOME/.multirust/toolchains/nightly-x86_64-apple-darwin/lib/rustlib/src/rust/src/"
#export SYSROOT=/path/to/rustc/sysroot cargo install clippy

export GOPATH=$HOME/gocode
export GOBIN=$GOPATH/bin

### Added by the Heroku Toolbelt
export HEROKU_PATH='/usr/local/heroku/bin'

OPENSSL_PATH='/usr/local/opt/openssl'
export OPENSSL_INCLUDE_DIR=$OPENSSL_PATH/include
export OPENSSL_LIB_DIR=$OPENSSL_PATH/lib

export LOCAL_PATH=$HOME/bin
export LIBRARY_PATH="$LIBRARY_PATH:/usr/local/lib"

export PATH="$PATH:/usr/local/bin:/usr/local/sbin"
export PATH="$PATH:$LOCAL_PATH"
export PATH="$PATH:$GOBIN"
export PATH="$PATH:$HEROKU_PATH"
export PATH="$PATH:$JAVA_HOME/bin"
export PATH="$PATH:$RUST_PATH"
export PATH="$HOME/.cargo/bin:$PATH"

export MANPATH=/usr/local/man:$MANPATH


###############################################################################
# Sources
###############################################################################

# shellcheck source=/dev/null
source "$HOME/.dots/bash/ps1.sh"
# shellcheck source=/dev/null
source "$HOME/.dots/bash/docker.sh"
# shellcheck source=/dev/null
source "$HOME/.dots/bash/secrets"

alias fess='fzf --bind "enter:execute(less {})"'
# shellcheck source=/dev/null
[ -f "$HOME/.fzf.bash" ] && source "$HOME/.fzf.bash"
export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'

# shellcheck source=/dev/null
source "$HOME/git-completion.bash"

git_branch() {
  git rev-parse --abbrev-ref HEAD 2>/dev/null
}

# shellcheck source=/dev/null
source "$HOME/.opam/opam-init/init.sh" > /dev/null 2> /dev/null || true
# shellcheck source=/dev/null
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
